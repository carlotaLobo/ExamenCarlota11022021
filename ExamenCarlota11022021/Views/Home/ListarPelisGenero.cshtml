@model List<Pelicula>

<h1>ListarPelis</h1>

<table>
    <thead>
        <tr>
            <th>TITULO</th>
            <th>PRECIO</th>
            <th>CARTEL</th>
            <th>--</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Pelicula p in Model)
        {
        <tr>
            <td>@p.Titulo</td>
            <td>@p.Precio</td>
            <td>
                <img src="~/images/@p.Foto" style="width:150px" />
            </td>
            <td> <a class="btn btn-info" asp-action="DetallePeli" asp-controller="Home" asp-route-id="@p.Id">Ver Detalles</a> </td>
        </tr>
        }

    </tbody>
</table>